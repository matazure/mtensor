root = true

# Unix-style newlines with a newline ending every file
[*]
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{c,cpp,hpp,h,cu,cl,metal,jenkinsfile}]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[{{*.cmake}, CMakeLists.txt}]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
